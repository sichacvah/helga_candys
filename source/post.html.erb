---
pageable: true
per_page: 10
---

<% content_for :title do %>
  <%= category %>
<% end %>

<% if paginate && num_pages > 1 %>
  <p>Страница <%= page_number %> из <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Назад', prev_page %></p>
  <% end %>
<% end %>

<%= partial 'partials/posts' %>
<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Вперёд', next_page %></p>
  <% end %>
<% end %>
